<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#95dcb5"
            android:orientation="horizontal">

            <android.support.v4.widget.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:src="@drawable/bg_profile" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/txtv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxHeight="50dp"
                    android:minHeight="50dp"
                    android:text="lo van kien"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtv_name"
                    android:text="141 hoang quoc viet" />

                <TextView
                    android:id="@+id/txtv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtv_name"
                    android:text="11:40 am" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dang tac duong" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerInside"
            android:id="@+id/img_status"
            android:src="@drawable/bg_user_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/img_like"
                android:src="@drawable/com_facebook_button_icon_blue" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/img_report"
                android:src="@drawable/com_facebook_button_icon_blue" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/img_share"
                android:src="@drawable/com_facebook_button_icon_blue" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
